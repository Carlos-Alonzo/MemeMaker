<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/toptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/apply"
        android:ems="10"
        android:hint="Enter top meme text here"
        android:inputType="text|textCapCharacters"
        android:singleLine="false" />

    <EditText
        android:id="@+id/bottext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/toptext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/toptext"
        android:layout_below="@+id/toptext"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Enter bottom meme text here"
        android:inputType="text|textCapCharacters"
        android:singleLine="false" />

    <Button
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/toptext"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:text="Apply" />
</RelativeLayout>
